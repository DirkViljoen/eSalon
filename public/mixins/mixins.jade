mixin form-input-slider(id, label, placeholder, myValue)
  .form-group
    label.control-label.col-sm-2(for=id)= label
    .col-sm-10
      input.form-control(type='text' id=id placeholder=placeholder value=myValue readonly)
      div(id='slider')

mixin form-button(label, path, id)
  ul.nav.nav-pills
    li(role='presentation')
      a.btn-primary(href=path id=id)= label

mixin form-button-upload(label, path, id)
  ul.nav.nav-pills
    li(role='presentation')
      a.btnUpload.btn-primary(href=path id=id)= label

mixin form-button-download(label, path, id)
  ul.nav.nav-pills
    li(role='presentation')
      a.btnDownload.btn-primary(href=path id=id)= label

mixin form-button-small-remove()
  ul.nav.nav-pills
    li(role='presentation')
      a.btn-primary.btn-danger.glyphicon-minus(href='#')

mixin form-button-small-add()
  ul.nav.nav-pills
    li(role='presentation')
      a.btn-primary.btn-sm.btn-success.glyphicon-plus(href='#')

mixin form-group(label)
  .form-group
    .col-sm-2
    .col-sm-10
      h5= label

mixin workbreak()
  .row
    .col-sm-1
    .col-sm-10.workarea
      br

mixin form-combobox(id, name, values, selected)
  .form-group
    label.col-sm-2.control-label= name
    .col-sm-10.selectContainer
      select.form-control(id=id name=name)
        each item in values
          if item.id == selected
            option(value=item.id selected)= item.value
          else
            option(value=item.id)= item.value

mixin form-combobox-minimal(id, name, values, selected)
  select.form-control(id=id name=name)
    each item in values
      if item.id == selected
        option(value=item.id selected)= item.value
      else
        option(value=item.id)= item.value

mixin form-combobox-readonly(id, name, values, selected)
  .form-group
    label.control-label.col-sm-2(for=id)= name
    .col-sm-10
      each item in values
        if item.id == selected
          input.form-control(type='text' id=id value=item.value readonly)
