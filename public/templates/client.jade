extends layouts/master
include ../mixins/mixins

block header
  label Clients

block loggedIn
  a(href='#', class='navbar-link') Signed in as Mark Otto

block content
  .row
    .col-sm-1
    .col-sm-10.workarea
      h3 Client Search
      form.form-horizontal(role='form')
        +form-group('Search Criteria')
        +form-inputbox('text', 'cliFName', 'Name:', 'Client name', '')
        +form-inputbox('text', 'cliLName', 'Surname:', 'Client surname', '')
        .row
          .col-sm-2
          .col-sm-8
            .row
              table.table.table-hover
                thead
                  tr
                    th.col-md-3.col-sm-3 Title
                    th.col-md-3.col-sm-3 Name
                    th.col-md-3.col-sm-3 Surname
                    th.col-md-3.col-sm-3 Date of birth
                tbody
                  tr
                    td.col-md-3.col-sm-3= cliTitle
                    td.col-md-3.col-sm-3= cliFName
                    td.col-md-3.col-sm-3= cliLName
                    td.col-md-3.col-sm-3= cliDOB
  +workbreak()
  .row
    .col-sm-1
    .col-sm-10.form-group.workarea
      ul.nav.nav-pills.pull-right
        li(role='presentation')
          a.btn-primary(href='/client/add') Add
        li(role='presentation')
          a.btn-primary(href='/client/view') View
        li(role='presentation')
          a.btn-primary(href='/client') Export client list
          br
