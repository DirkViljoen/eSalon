extends ../layouts/master
include ../../mixins/mixins

block header
    label Capture sub-letter payment

block loggedIn
    a(href='#', class='navbar-link') Signed in as Mark Otto

block content
    .row
        .col-sm-1
        .col-sm-10.workarea
            h3 Capture payment from !{slBName}
            form.form-horizontal
                +form-input-calendar('slPaymentDate', 'Payment date:', '', slPaymentDate)
                +form-inputbox('text', 'slPaymentAmount', 'Amount:', 'Payment amount', slRent)
                +form-combobox('slComboPaymentMethod', 'Payment method:', slPaymentMethods, slPaymentMethod)

    +workbreak()
    .row
        .col-sm-1
        .col-sm-10.form-group.workarea
            ul.nav.nav-pills.pull-right
                li(role='presentation')
                    a.btn-primary(href='/sub-letters') Capture
                li(role='presentation')
                    a.btn-primary(href='/sub-letters') Cancel
                    br

