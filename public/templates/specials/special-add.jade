extends ../layouts/master
include ../../mixins/mixins

block header
  label Add special

block loggedIn
  a(href="#", class="navbar-link") Signed in as Mark Otto

block content

  .row
    .col-sm-1
    .col-sm-10.workarea
      h3 New special details
      form.form-horizontal(role="form")
        +form-group("Service information")
        +form-input-calendar('spcStart', 'Special start date:', 'dd/mm/yyyy', dateSpecialStart)
        +form-input-calendar('spcEnd', 'Special end date:', 'dd/mm/yyyy', dateSpecialEnd)

  +workbreak()
  .row
    .col-sm-1
    .col-sm-10.form-group.workarea
      ul.nav.nav-pills.pull-right
        li(role="presentation")
          a.btn-primary(href="/service") Save
        li(role="presentation")
          a.btn-primary(href="/service") Cancel
          br

