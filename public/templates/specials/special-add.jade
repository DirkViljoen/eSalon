extends ../layouts/master
include ../../mixins/mixins

block header
    label Add special

block loggedIn
    a(href="#", class="navbar-link") Signed in as Mark Otto

block content

    .row
        .col-sm-1
        .col-sm-10.workarea
            h3 New special details
            form.form-horizontal
                +form-input-calendar('spcStart', 'Special start date:', 'dd/mm/yyyy', dateSpecialStart)
                +form-input-calendar('spcEnd', 'Special end date:', 'dd/mm/yyyy', dateSpecialEnd)
                +form-group("Conditional items")
                div(id='frmConditionAll')
                    .form-group
                        label.control-label.col-sm-2(for='frmResult')
                        .col-sm-10
                            div(id='frmCondition')
                                table.table.table-hover
                                    thead
                                        tr
                                            th Category
                                            th Stock/Service
                                            th Quantity
                                            th
                                    tbody
                                        tr
                                            td
                                                input.form-control(type='text' placeholder='Category' value='Hair cut')
                                            td
                                                input.form-control(type='text' placeholder='Service/product name' value='Standard cut')
                                            td
                                                input.form-control(type='text' placeholder='Quantity' value='1')
                                            td
                                                +form-button-small-remove()
                                        tr
                                            td
                                            td
                                            td
                                            td
                                                +form-button-small-add()
                +form-group("Result")
                div
                    .form-group
                        label.control-label.col-sm-2(for='frmCondition')
                        .col-sm-10
                            div(id='frmResult')
                                table.table.table-hover
                                    thead
                                        tr
                                            th Category
                                            th Service/Product
                                            th discount
                                            th Type
                                            th
                                    tbody
                                        tr
                                            td
                                                input.form-control(type='text' placeholder='Category' value='Hair cut')
                                            td
                                                input.form-control(type='text' placeholder='Service/product name' value='Standard cut')
                                            td
                                                input.form-control(type='text' placeholder='Discount amount' value='')
                                            td

                                                input(type="radio" name='type' value='test' selected)
                                                label &nbsp;R&nbsp;&nbsp;
                                                input(type="radio" name='type' value='test')
                                                label &nbsp;%
                                            td
                                                +form-button-small-remove()
                                        tr
                                            td
                                            td
                                            td
                                            td
                                            td
                                                +form-button-small-add()
                +form-group('Message')
                +form-inputbox-multiline('mult', '', 'valentines special', 'test')

                +workbreak
                .form-group
                    .col-sm-2
                    .col-sm-6.form-group
                        input(type="checkbox" name='type' value='test' selected)
                        label &nbsp;Send notification


    .row
        .col-sm-1
        .col-sm-10.form-group.workarea
            ul.nav.nav-pills.pull-right
                li(role="presentation")
                    a.btn-primary(href="/booking") Capture Special
                li(role="presentation")
                    a.btn-primary(href="/booking") Cancel
                    br

