extends ../layouts/master
include ../../mixins/mixins

block links

block header
  label Update booking

block loggedIn
  a(href="#", class="navbar-link") Signed in as Mark Otto

block content
  .row
    .col-sm-1
    .col-sm-10.workarea
      h3 Update booking for: !{bkgClient}
      form.form-horizontal(role="form")
        +form-group("Booking details")
        +form-combobox('bookingClient', 'Client:', arrClients, bkgClient)
        //+form-combobox(id, name, values, selected)
        +form-inputbox('text', 'bookingStylist', 'Stylist:', '', bkgStylist)
        +form-input-calendar('bookingDate', 'Booking date:', 'dd/mm/yyyy', dateBookingStart)
        +form-input-time('bookingTime', 'Booking time:', 'hh:mm', timeBookingStart)
        .form-group
          label.control-label.col-sm-2(for='frmServ') Services:
          .col-sm-10
            form.form-horizontal(role="form" id="frmServ")
              table.table.table-hover
                thead
                  tr
                    th Service
                    th Length
                    th Duration
                    th
                tbody
                  tr
                    td
                      +form-combobox-minimal('bkgService', 'Service', arrServices, bkgService)
                    td
                      +form-combobox-minimal('bkgService', 'Service', arrHairLength, bkgHairLength)
                    td
                      input.form-control(type='text' id='dur_1' placeholder='Duration' value=bkgSerLen)
                    td
                      +form-button-small-remove()
                  tr
                    td
                    td
                    td
                    td
                      +form-button-small-add()
        +form-input-slider('amount', 'Duration:', 'mm', '10')
      +workbreak()
      form.form-horizontal(role="form")
        +form-inputbox('text', 'bkngReference', 'Booking reference:', '', '0526-0023', 5, true)

  +workbreak()
  .row
    .col-sm-1
    .col-sm-10.form-group.workarea
      ul.nav.nav-pills.pull-right
        li(role="presentation")
          a.btn-primary(href="/booking") Cancel
        li(role="presentation")
          a.btn-primary(href="/booking") Save
        li(role="presentation")
          a.btn-primary(href="/booking") Delete
        li(role="presentation")
          a.btn-primary(href="/booking/finalise") Finalise invoice
          br

