extends layouts/master
include ../mixins/mixins

block header
  label Update supplier: !{supName}

block loggedIn
  a(href='#', class='navbar-link') Signed in as Mark Otto

block content

  .row
    .col-sm-1
    .col-sm-10.workarea
      h3 Details for !{supName}
      form.form-horizontal(role='form')
        +form-group('Supplier information')
        +form-inputbox('text', 'supName', 'Business name:', 'Supplier name', supName)
        +form-inputbox('text', 'supContactNum', 'Contact Number:', 'Supplier contact number', supContactNum)
        +form-inputbox('email', 'supEmail', 'Email address:', 'sup@company.co.za', supEmail)
  +workbreak()
  .row
    .col-sm-1
    .col-sm-10.form-group.workarea
      ul.nav.nav-pills.pull-right
        li(role='presentation')
          a.btn-primary(href='/supplier') Save
        li(role='presentation')
          a.btn-primary(href='/supplier') Cancel
          br

