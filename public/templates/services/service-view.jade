extends ../layouts/master
include ../../mixins/mixins

block header
  label View service

block loggedIn
  a(href='#', class='navbar-link') Signed in as Mark Otto

block content

    form.row.col-xs-12.workarea.form-validate(id="serviceUpdate", ng-controller="ServiceController" , ng-init="initView(" + p.id + ","+user.uid+")")
        .row
            .col-sm-1
            .col-sm-11
                h3 View service details
                br
        .row
            .col-md-1
            .col-md-10.form-horizontal
                .grouphead
                    +form-group('Service Information')
                .groupbox
                    +ng-input-text('sname', 'Name:', 'service.name', 'service name', false, true, '1', '50')
                    +ng-input-textarea('sinfo', 'Additional information:', 'service.info', '', false, true, '1', '300')
                    +ng-input-text('number_sm_pos', 'Duration (Short):', 'service.duration.short', 'Duaration for short hair in minutes', false, true, '1', '4')
                    +ng-input-text('number_sm_pos', 'Duration (Medium):', 'service.duration.medium', 'Duaration for medium hair in minutes', false, true, '1', '4')
                    +ng-input-text('number_sm_pos', 'Duration (Long):', 'service.duration.long', 'Duaration for long hair in minutes', false, true, '1', '4')
                    +ng-input-currency('currency_sm_pos', 'Service price:', 'service.price', 'Service price for all lengths', false, true, '1', '11')
        br
        .row
            .col-md-1
            .col-md-10.form-group.workarea
                ul.nav.nav-pills.pull-right
                    li(role='presentation')
                        input.btn.btn-primary(type="button", value="Update", ng-click='updateService()')
                    li(role='presentation')
                        input.btn.btn-default(type="button", value='Cancel', ng-click='cancel()')
                        br

        //- br
        //- p service: {{service}}
        //- p services: {{services}}

