extends layouts/master
include ../mixins/mixins

block header
  label Add new employee

block loggedIn
  a(href="#", class="navbar-link") Signed in as Mark Otto

block content

  .row
    .col-sm-1
    .col-sm-10
      ul.nav.nav-tabs
        li
          a(href="/employee/view") Personal
        li.active
          a(href="#") Image
  .row
    .col-sm-1
    .col-sm-10(style="background-color:#987987")
      h3 New employee details
      form.form-horizontal(role="form")
        +form-group("Take a picture")
        .row
          .col-sm-2
          .col-xs-6.col-md-3
            a.thumbnail(href="#")
              img(src=empImage alt="other")
        .form-group
          .col-sm-2
          .col-xs-6.col-md-3
            .btn-group(role="group" aria-label="...")
  +workbreak()
  .row
    .col-sm-1
    .col-sm-10.form-group.workarea
      ul.nav.nav-pills.pull-right
        li(role="presentation")
          a.btn-primary(href="/employee/update") Update
        li(role="presentation")
          a.btn-primary(href="/employee") Cancel
          br

