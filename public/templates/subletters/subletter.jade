extends ../layouts/master
include ../../mixins/mixins

block header
    label Manage sub-letter

block loggedIn
    a(href='#', class='navbar-link') Signed in as Mark Otto

block content
    form.workarea(id="slSelect" method="post" action="/sub-letters/")
        .row
            .col-sm-1
            .col-sm-10
                h3 Sub-letter search
                br

        .row
            .col-sm-1
            .col-sm-9.form-horizontal
                +form-inputbox('text', 'sBusinessName', 'Business name:', 'Sub-letter business name', '')
            .col-sm-1.form-horizontal
                input.btn.btn-primary(type="submit" name="action" value="Search")

        +workbreak()
        .row
            .col-sm-1
            .col-sm-10
              table.table.table-hover.table-radio(id="subletter-search")
                thead
                  tr
                    th
                    th Business
                    th Contact Person
                    th Contact Number
                    th Contact email
                each item in rows
                    tbody
                        tr
                            td
                                input(type="radio" name="sSub_Letter_id" value=item.sSub_Letter_id)
                            td= item.sBusinessName
                            td= item.sContactFName + ' ' + item.sContactLName
                            td= item.sContactNumber
                            td= item.sContactEmail

        .row
            .col-sm-1
            .col-sm-10.form-group
                ul.nav.nav-pills.pull-right
                    li(role='presentation')
                        input.btn.btn-primary(type="submit" name="action" value="View")
                    li(role='presentation')
                        input.btn.btn-default(type="submit" name="action" value="Update")
                    li(role='presentation')
                        input.btn.btn-default(type="submit" name="action" value="Delete")
                    li(role='presentation')
                        input.btn.btn-default(type="submit" name="action" value="Capture payment")


