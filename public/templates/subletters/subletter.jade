extends ../layouts/master
include ../../mixins/mixins

block header
    label Manage sub-letter

block loggedIn
    a(href='#', class='navbar-link') Signed in as Mark Otto

block content
    .row
        .col-sm-1
        .col-sm-10.workarea
            h3 Sub-letter search
            form.form-horizontal
                +form-inputbox('text', 'slBusinessName', 'Business name:', 'Sub-letter business name', slBName)

    +workbreak()
    .row
        .col-sm-1
        .col-sm-10.workarea
          table.table.table-hover
            thead
              tr
                th Business
                th Contact Person
                th Contact Number
                th Contact email
            each item in slSearch
                tbody
                    tr
                        td= item.slBName
                        td= item.slCFName + ' ' + item.slCLName
                        td= item.slCNumber
                        td= item.slCEmail
    .row
        .col-sm-1
        .col-sm-10.form-group.workarea
            ul.nav.nav-pills.pull-right
                li(role='presentation')
                    a.btn-primary(href='/sub-letters/view') View
                li(role='presentation')
                    a.btn-primary(href='/sub-letters/update') Update
                li(role='presentation')
                    a.btn-primary(href='#') Delete
                li(role='presentation')
                    a.btn-primary(href='/sub-letters/payment') Capture payment
                    br

