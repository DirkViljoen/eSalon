extends ../layouts/master
include ../../mixins/mixins

block header
    label View sub-letter

block loggedIn
    a(href='#', class='navbar-link') Signed in as Mark Otto

block content
    .row
        .col-sm-1
        .col-sm-10.workarea
            h3 View details for !{slBName}
            form.form-horizontal
                +form-inputbox-readonly('text', 'slBusinessName', 'Business name:', 'Sub-letter business name', slBName)
                +form-inputbox-readonly('text', 'slContactFName', 'Contact name:', 'Sub-letter contact name', slCFName)
                +form-inputbox-readonly('text', 'slContactLName', 'Contact surname:', 'Sub-letter contact surname', slCLName)
                +form-inputbox-readonly('text', 'slContactNumber', 'Contact number:', 'Sub-letter contact number', slCNumber)
                +form-inputbox-readonly('email', 'slContactEmail', 'Contact email:', 'Sub-letter contact email', slCEmail)
                +form-inputbox-readonly('text', 'slRent', 'Rent:', 'Sub-letter rent', slRent)
                +form-input-calendar('slStartDate', 'Start date:', '', slStartDate)

    +workbreak()
    .row
        .col-sm-1
        .col-sm-10.form-group.workarea
            ul.nav.nav-pills.pull-right
                li(role='presentation')
                    a.btn-primary(href='/sub-letters/update') Update
                li(role='presentation')
                    a.btn-primary(href='/sub-letters') Delete
                li(role='presentation')
                    a.btn-primary(href='/sub-letters') Back
                    br

