extends ../layouts/master
include ../../mixins/mixins

block header
    label View sub-letter

block loggedIn
    a(href='#', class='navbar-link') Signed in as Mark Otto

block content
    .row
        .col-sm-1
        .col-sm-10.workarea
            h3 View details for !{sBusinessName}
            form.form-horizontal
                +form-inputbox-readonly('text', 'sBusinessName', 'Business name:', 'Sub-letter business name', sBusinessName)
                +form-inputbox-readonly('text', 'sContactFName', 'Contact name:', 'Sub-letter contact name', sContactFName)
                +form-inputbox-readonly('text', 'sContactLName', 'Contact surname:', 'Sub-letter contact surname', sContactLName)
                +form-inputbox-readonly('text', 'sContactNumber', 'Contact number:', 'Sub-letter contact number', sContactNumber)
                +form-inputbox-readonly('email', 'sContactEmail', 'Contact email:', 'Sub-letter contact email', sContactEmail)
                +form-inputbox-readonly('text', 'sAmount', 'Rent:', 'Sub-letter rent', sAmount)
                +form-input-calendar('sDateTime', 'Start date:', '', sDateTime)

    +workbreak()
    .row
        .col-sm-1
        .col-sm-10.form-group.workarea
            ul.nav.nav-pills.pull-right
                li(role='presentation')
                    a.btn-primary(href='/sub-letters/update') Update
                li(role='presentation')
                    a.btn-primary(href='/sub-letters') Delete
                li(role='presentation')
                    a.btn-primary(href='/sub-letters') Back
                    br

