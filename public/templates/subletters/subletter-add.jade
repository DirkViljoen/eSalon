extends ../layouts/master
include ../../mixins/mixins

block header
    label Add new sub-letter

block loggedIn
    a(href='#', class='navbar-link') Signed in as Mark Otto

block content
    form.form-signin.form-horizontal(id="sub-letterAdd" method="post" action="/sub-letters/Add/")
        .row
            .col-sm-1
            .col-sm-10.workarea
                h3 New sub-letter details
                    +form-inputbox('text', 'slBName', 'Business name:', 'Sub-letter business name', slBName)
                    +form-inputbox('text', 'slCFName', 'Contact name:', 'Sub-letter contact name', slCFName)
                    +form-inputbox('text', 'slCLName', 'Contact surname:', 'Sub-letter contact surname', slCLName)
                    +form-inputbox('text', 'slCNumber', 'Contact number:', 'Sub-letter contact number', slCNumber)
                    +form-inputbox('email', 'slCEmail', 'Contact email:', 'Sub-letter contact email', slCEmail)
                    +form-inputbox('text', 'slRent', 'Rent:', 'Sub-letter rent', slRent)
                    +form-input-calendar('slStartDate', 'Start date:', '', slStartDate)

        +workbreak()
        .row
            .col-sm-1
            .col-sm-10.form-group.workarea
                input(type="submit" for="sub-letterAdd" value="Save")
                ul.nav.nav-pills.pull-right
                    li(role='presentation')
                        a.btn-primary(href='/sub-letters') Save
                    li(role='presentation')
                        a.btn-primary(href='/sub-letters') Cancel
                        br


