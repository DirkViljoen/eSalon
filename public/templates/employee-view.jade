extends layouts/master
include ../mixins/mixins

block header
  label Employee details for: !{empFName} !{empLName}

block loggedIn
  a(href="#", class="navbar-link") Signed in as Mark Otto

block content
  .row
    .col-sm-1
    .col-sm-10.workarea
      h3 Details for: !{empFName} !{empLName}
      form.form-horizontal(role="form")
        +form-group("Personal information")
        +form-inputbox-readonly("text", "empFName", "Name:", "Employee name", empFName)
        +form-inputbox-readonly("text", "empLName", "Surname:", "Employee surname", empLName)
        +form-inputbox-readonly("text", "empCNumber", "Contact Number:", "082 000 0000", empCNumber)
        +form-inputbox-readonly("email", "empEmail", "Email:", "employee@domain.com", empEmail)
        +form-inputbox-readonly("text", "empSalary", "Salary:", "0 000.00", empSalary)
        br
        +form-group("Take a picture")
        .row
          .col-sm-2
          .col-xs-6.col-md-3
            a.thumbnail(href="#")
              img(src=empImage alt="No image")
        br
        +form-group("Credentials")
        +form-inputbox-readonly("text", "empUsername", "Username:", "Employee username", empUsername)
        +form-combobox-readonly("empRole", "Role", userRoles, empRole)
        +form-inputbox-readonly("password", "empPassword", "Password:", "Employee password", empPassword)
        +form-button("Change password")
        br
        +form-group("Address information")
        +form-inputbox-readonly("text", "empALine1", "Line 1:", "43 Some Complex", empALine1)
        +form-inputbox-readonly("text", "empALine2", "Line 2:", "12 Some street", empALine2)
        +form-combobox-readonly("empSuburb", "Suburb", addressSuburbs, empSuburb)
        +form-combobox-readonly("empCity", "City", addressCitys, empCity)
        +form-combobox-readonly("empProvince", "Province", addressProvinces, empProvince)
  +workbreak()
  .row
    .col-sm-1
    .col-sm-10.form-group.workarea
      ul.nav.nav-pills.pull-right
        li(role="presentation")
          a.btn-primary(href="/employee/update") Edit
        li(role="presentation")
          a.btn-primary(href="/employee") Cancel
          br

